# ZEEKY AI ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.8

# Alternative AI Providers (Optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here
COHERE_API_KEY=your-cohere-api-key-here

# Database Configuration
DATABASE_URL=sqlite:///./zeeky_ai.db
REDIS_URL=redis://localhost:6379

# Security Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_RELOAD=true

# Voice Integration (Optional)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Payment Processing (Optional)
STRIPE_SECRET_KEY=your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key-here

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_BUCKET_NAME=your-s3-bucket-name

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Development Settings
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# Feature Flags
ENABLE_VOICE_INTEGRATION=true
ENABLE_SMART_HOME=true
ENABLE_BLOCKCHAIN=true
ENABLE_QUANTUM_COMPUTING=true
ENABLE_METAVERSE=true
ENABLE_CYBERSECURITY=true
ENABLE_AUTONOMOUS_SYSTEMS=true
ENABLE_NEURAL_NETWORKS=true
ENABLE_ADVANCED_REASONING=true
ENABLE_ENTERTAINMENT=true
ENABLE_BUSINESS_INTELLIGENCE=true
ENABLE_ANALYTICS=true
ENABLE_INTEGRATIONS=true
ENABLE_REALISTIC_AVATAR=true
